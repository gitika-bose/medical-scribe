{
  "hosting": [
    {
      "target": "app",
      "public": "frontend-expo/dist",
      "ignore": [
        "firebase.json",
        "**/.*",
        ".env.local",
        ".env.*.local"
      ],
      "headers": [
        {
          "source": "**/*.@(ttf|otf|woff|woff2|eot)",
          "headers": [
            {
              "key": "Content-Type",
              "value": "font/ttf"
            },
            {
              "key": "Access-Control-Allow-Origin",
              "value": "*"
            }
          ]
        }
      ],
      "rewrites": [
        { 
          "source": "**", 
          "destination": "/index.html" 
        }
      ]
    },
    {
      "target": "landing",
      "public": "landing/dist",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**",
        ".env.local",
        ".env.*.local"
      ],
      "rewrites": [
        { 
          "source": "**", 
          "destination": "/index.html" 
        }
      ]
    }
  ]
}