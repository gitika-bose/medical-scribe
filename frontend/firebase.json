{
  "hosting": [
    {
      "target": "app",
      "public": "app/dist",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        { 
          "source": "**", 
          "destination": "/index.html" 
        }
      ]
    },
    {
      "target": "landing",
      "public": "landing/dist",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        { 
          "source": "**", 
          "destination": "/index.html" 
        }
      ]
    }
  ]
}